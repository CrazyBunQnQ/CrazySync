<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.crazybunqnq.pluginsexporter</id>
    <name>Plugins Exporter</name>
    <version>0.0.6</version>
    <vendor>crazybunqnq</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationService
                serviceImplementation="com.github.crazybunqnq.pluginsexporter.config.PluginImporterExporterConfig"
                serviceInterface="com.github.crazybunqnq.pluginsexporter.config.PluginImporterExporterConfig"/>
        <notificationGroup displayType="BALLOON" id="com.github.crazybunqnq"/>
        <!-- <toolWindow factoryClass="com.github.crazybunqnq.pluginsexporter.toolWindow.MyToolWindowFactory" id="MyToolWindow"/> -->
    </extensions>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <!-- Add your actions here -->
        <action class="com.github.crazybunqnq.pluginsexporter.action.PluginImporterAction"
                description="Install plugins from a setting file"
                id="PluginImporterAction" text="Import Plugins...">
            <add-to-group anchor="after" group-id="FileMenu"
                          relative-to-action="FileMainSettingsGroup"/>
        </action>
        <action class="com.github.crazybunqnq.pluginsexporter.action.PluginExporterAction"
                description="Export plugin information to a setting file"
                id="PluginExporterAction" text="Export Plugins...">
            <add-to-group anchor="after" group-id="FileMenu"
                          relative-to-action="PluginImporterAction"/>
        </action>
    </actions>

    <applicationListeners>
        <!-- <listener class="com.github.crazybunqnq.pluginsexporter.listeners.MyApplicationActivationListener" topic="com.intellij.openapi.application.ApplicationActivationListener"/> -->
    </applicationListeners>
</idea-plugin>
